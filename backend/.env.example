# Google API Key (for Gemini)
GOOGLE_API_KEY=your-gemini-api-key-here

# Google OAuth - Web Application credentials
# Download from: Google Cloud Console > APIs & Credentials > OAuth 2.0 Client IDs
# IMPORTANT: Must be "Web Application" type, not "Desktop"
# Add http://localhost:8000/auth/callback to Authorized redirect URIs
GOOGLE_CLIENT_SECRETS=credentials.json

# JWT session secret — CHANGE THIS in production!
JWT_SECRET=change-me-in-production
JWT_EXPIRY_HOURS=24

# Frontend URL (for OAuth callback redirect)
FRONTEND_URL=http://localhost:3000

# CORS — allow your frontend origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# LLM Model
GEMINI_MODEL=gemini-2.5-flash
